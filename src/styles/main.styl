  text-decoration: none;
  border: 0 none;
}

// Pulse

@keyframes pulse {
  from {
    color: #aaa;
  }

  to {
    color: darken(gold, 10%);
  }
}

.future {
  animation: pulse linear 1s;
  animation-direction: alternate;
  animation-iteration-count: infinite;
}

.futures {
  > * {
    animation: pulse linear 1s;
    animation-direction: alternate;
    animation-iteration-count: infinite;
  }

  for i in 0..6 {
    > :nth-child({i}n) {
      animation-delay: i * 333ms;
    }
  }
}

// Typography

h3 {
  -moz-font-feature-settings: "liga=1, dlig=1";
  -ms-font-feature-settings: "liga", "dlig";
  -webkit-font-feature-settings: "liga", "dlig";
  -o-font-feature-settings: "liga", "dlig";
  font-feature-settings: "liga", "dlig";
}

h1, h2, h3, h4, h5 {
  small {
    display: block;
  }
}

.copy {
  margin: 1em 0;
  font-size: 10px;
  font-weight: normal;
}

.twitter {
  color: dodgerblue;
}

for i in 0..6 {
  .columns-{i} {
    column-count: i;
  }
}

.low {
  opacity: 0.6;
}

.warning {
  color: #b54;
}

code[class*="language-"] {
  background: none !important;
}

.text-transform-none {
  text-transform: none !important;
}

// YouTube

iframe {
  width: 100%;
  height: 100%;
}

.bespoke-inactive iframe {
  display: none;
}

.bespoke-inactive.bespoke-before-1 iframe,
.bespoke-inactive.bespoke-after-1 iframe {
  display: block;
}

// Tables

table.products {
  th, td {
    padding: 0.3em 0.4em;
  }
}

table.rows {
  th, td {
    padding: 0.2em 0.5em;
  }

  tr + tr {
    border-top: 2px solid white;
  }

  th {
    text-align: left;
  }

  td {
    text-align: right;
  }

  th.icon,
  td.icon {
    text-align: center;
    position: relative;
    top: -1px;

    span,
    i {
      margin: 0 4px;
    }

    img {
      width: auto !important;
      height: 1em;
      vertical-align: middle;
      position: relative;
      top: -1px;
    }
  }
}

// iOS 7 Icon

.ios7-icon {
  width: 150px;
  height: 150px;
  border-radius: 17.544%;
  -webkit-mask-image: url('../images/ios7-icon.svg');
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: 100% 100%;
  background-size: 102% 102%;
}

// Backdrops

backdrop(name, filename) {
  .backdrop--{name} {
    background-image: url('../images/' + filename);
    background-position: 50% 50%;

    {block}

    &.bespoke-backdrop-active {
      opacity: 0.4;
    }
  }
}

+backdrop(start, 'penrose.svg') {
  background-size: 300% 300%;

  &.bespoke-backdrop-before {
    transition-delay: 2s;
  }
};

+backdrop(penrose, 'penrose.svg') {
  background-size: 300% 300%;
};

